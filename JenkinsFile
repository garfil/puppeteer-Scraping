pipeline {
    agent any
    
    stages {
        stage("checkout") {
            steps {
                checkout scm
            }
        }
        
        stage("PackageInstall") {
            steps {
                bat "npm install"
            }
        }
        
        stage("Build") {
            steps {
                bat "npm install -g nodemon"
                bat "npx nodemon puppetter.js"
            }
        }
    }
    
    post {
        always {
            // Mark the build as complete
            script {
                currentBuild.result = 'SUCCESS'
            }
        }
    }
}
