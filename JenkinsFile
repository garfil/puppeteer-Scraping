pipeline {
    agent any
    
    stages {
        stage("checkout") {
            steps {
                checkout scm
            }
        }
        
        stage("Build Image") {
            steps {
                sh "docker build -t myjenkinsapp ."
            }
        }
    }
    
    post {
        success {
            // Mark the build as successful
            script {
                currentBuild.result = 'SUCCESS'
            }
        }
        failure {
            // Mark the build as failed
            script {
                currentBuild.result = 'FAILURE'
            }
        }
    }
}
