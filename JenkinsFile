pipeline {
    agent any
    
    stages {
        stage("checkout") {
            steps {
                checkout scm
            }
        }
        
        stage("Build Image") {
            steps {
                bat "docker build -t myjenkinsapp ."
            }
        }
    }
    
    post {
        always {
            // Mark the build as complete
            script {
                currentBuild.result = 'SUCCESS'
            }
        }
    }
}
