pipeline {
    agent any
    
    stages {
        stage("checkout") {
            steps {
                checkout scm
            }
        }
        
        stage("Build Image") {
            steps {
                script {
                    def dockerImageName = "myjenkinsapp"
                    def dockerImageVersion = getDockerImageVersion(dockerImageName)

                    bat "docker build -t $dockerImageName:$dockerImageVersion ."
                }
            }
        }
    }
    
    post {
        success {
            script {
                currentBuild.result = 'SUCCESS'
            }
        }
        failure {
            script {
                currentBuild.result = 'FAILURE'
            }
        }
    }
}

def getDockerImageVersion(imageName) {
    def version = 1
    def dockerImageDetails = bat(script: "docker images --format \"{{.Tag}}\" $imageName", returnStdout: true).trim()

    if (dockerImageDetails) {
        def versions = dockerImageDetails.tokenize('\n').collect { it.toInteger() }
        version = versions.max() + 1
    }

    return version
}
